<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Pegawai</h2>
            <% if (msg.length !== 0 ) { %>
                <div class="alert alert-success fw-bold" role="alert">
                    <%= msg %> 
                </div>
            <% } %>
            <table class="table mt-3">
                <thead>
                    <a href="/employee/add" class="btn btn-primary float-sm-end btn-sm mt-3"><i class="bi bi-plus-circle"></i>  Tambah Pegawai </a>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nama</th>
                      <th scope="col">Hari</th>
                      <th scope="col">Detail</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (employees.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data Pegawai masih kosong! <br> <a href="/" class="alert-link fw-normal">&laquo; kembali ke halaman utama</a>
                                </div>
                            </td>
                        </tr>
                    <% } %> 
                    <% employees.forEach((employee, i) => { i++ %>
                        <tr>
                          <th scope="row"><%= i++ %> </th>
                          <td> <%= employee.nama %> </td>
                          <td><%= employee.hari %></td>
                          <td>
                              <a href="/employee/<%= employee.nama %> " class="badge rounded-pill bg-primary"><i class="bi bi-info-circle"></i> Detail</a>
                          </td>
                        </tr>                     
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>