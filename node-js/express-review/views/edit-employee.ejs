<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Barang</h2>

            <form method="post" action="/stuf/update">
                <input type="hidden" name="oldNama" value="<%= (stuf.oldNama) ? stuf.oldNama : stuf.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input class="form-control" id="nama" name="nama" required value="<%= stuf.nama %>">
                </div>
                <div class="mb-3">
                  <label for="warna" class="form-label">Warna</label>
                  <input type="text" class="form-control" id="warna" name="warna" required value="<%= stuf.warna %>">
                </div>
                <div class="mb-3">
                    <label for="jumlah" class="form-label">Jumlah</label>
                    <input type="jumlah" class="form-control" id="jumlah" name="jumlah" value="<%= stuf.jumlah %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah</button>
              </form>
        </div>
    </div>
</div>